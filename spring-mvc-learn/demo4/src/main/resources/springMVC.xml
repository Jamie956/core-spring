<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       https://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/mvc https://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <!-- enable annotation scan -->
    <context:component-scan base-package="org.example"/>

    <!-- config interceptor, intercept all request -->
<!--    <mvc:interceptors>-->
<!--        <bean class="org.example.MyInterceptor" />-->
<!--    </mvc:interceptors>-->

    <!-- using annotation component create interceptor, get myInterceptor2 from container -->
<!--    <mvc:interceptors>-->
<!--        <ref bean="myInterceptor2"/>-->
<!--    </mvc:interceptors>-->

    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/**"/>
            <!-- exclude home -->
            <mvc:exclude-mapping path="/"/>
            <ref bean="myInterceptor2" />
        </mvc:interceptor>
    </mvc:interceptors>

</beans>